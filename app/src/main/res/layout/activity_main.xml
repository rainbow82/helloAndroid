<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.myapplication.MainActivity">

    <TextView
        android:id="@+id/future_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/future_text_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/code_black_white"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/header_text"
        android:textColor="@color/picture_text"
        android:textSize="@dimen/future_text_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/first_question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/future_text"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/headline_text"
        android:textColor="@color/text"
        android:textSize="@dimen/first_question_text_size"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/engineers"
        android:layout_width="match_parent"
        android:layout_height="@dimen/engineers_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/first_question_text"
        android:layout_marginTop="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/engineers" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/code_black_white"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/small_pic_text"
        android:textColor="@color/picture_text"
        android:textSize="@dimen/box_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_text_height"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/udacity"
            android:textColor="@color/text"
            android:textSize="@dimen/udacity_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:text="@string/street_address"
            android:textColor="@color/address_color"
            android:textSize="@dimen/contact_info_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:text="@string/city"
            android:textColor="@color/address_color"
            android:textSize="@dimen/contact_info_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:linksClickable="true"
            android:text="@string/phone_number"
            android:textColor="@color/address_color"
            android:textSize="@dimen/contact_info_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoLink="web"
            android:gravity="center"
            android:linksClickable="true"
            android:text="@string/website"
            android:textColorLink="@color/address_color"
            android:textSize="@dimen/contact_info_text_size" />
    </LinearLayout>

</RelativeLayout>
